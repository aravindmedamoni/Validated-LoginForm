<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:layout_margin="10dp"
    tools:context=".RegisterForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText
        android:id="@+id/rgstrusrname"
        android:layout_marginTop="40dp"
        android:hint="Username"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/rgstrsurname"
        android:layout_below="@id/rgstrusrname"
        android:layout_marginTop="10dp"
        android:hint="Surname"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/rgstrusrmail"
        android:layout_below="@id/rgstrsurname"
        android:layout_marginTop="10dp"
        android:hint="E-mail"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/rgstrmbnum"
        android:layout_below="@id/rgstrusrmail"
        android:layout_marginTop="10dp"
        android:hint="Mobile Number"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/rgstrpswd"
        android:layout_below="@id/rgstrmbnum"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/rgstrcnfmpswd"
            android:textSize="20dp"
            android:fontFamily="serif"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rgstrpswd"
            android:hint="Confirm Password"
            android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/rgstrbtn"
        android:onClick="registerhere"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#ff5340"
        android:textSize="25dp"
        android:textStyle="bold" />

          <!--  <TextView
                android:id="@+id/rgstrdlt"
                android:onClick="deletuserdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="21dp"
                android:fontFamily="serif"
                android:text="deletedata"
                android:textColor="@color/colorAccent"
                android:textSize="24dp"
                android:textStyle="bold" />-->


    </RelativeLayout>

</ScrollView>